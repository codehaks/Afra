@page
@model Portal.Web.Areas.User.Pages.Posts.CreateModel
@{
    ViewData["Title"] = "Upload";
}

<form method="post" class="p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="PhotoFile" class="control-label"></label>
        <input asp-for="PhotoFile" type="file" class="form-control" />
        <span asp-validation-for="PhotoFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label"></label>
        <input asp-for="Body" class="form-control" />
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Submit</button>
</form>